{
	"compilerOptions": {
		"esModuleInterop": true,
		"outDir": "./build/js/",
		"noImplicitAny": true,
		// "module": "commonjs",
		"target": "es6",
		"allowJs": true,
		"skipLibCheck": true,
		"lib": ["es2016", "esnext"],
		"typeRoots": ["node_modules/@types/"],
		"moduleResolution": "node"
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules/**/*", "dist/**/*", "libs/**/*"]
}